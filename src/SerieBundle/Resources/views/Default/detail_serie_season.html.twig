{% extends 'base.html.twig' %}
{% block title %}{{ serie.name }}{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="text-left normalize">{{ serie.name }}, season {{ seasonnumber }}</h3>
                </div>
                <div class="panel-body">
                    <div class="row text-center cover"><img src="{{ serie.cover }}" alt=""></div>
                    <div class="col-md-4">
                        <div class="row text-center"><h3>Summary</h3></div>
                        <p>{{ serie.description }}</p>
                    </div>
                    <div class="col-md-8">
                        <table class="table table-striped table-responsive jambo_table">
                            <tr><td><strong>Added on:</strong></td><td>{{ serie.getCreationDateString }}</td></tr>
                            <tr><td><strong>Last Update:</strong></td><td>{{ serie.getLastTVDBUpdateString }}</td></tr>
                            <tr><td><strong>State:</strong></td><td> {{ serie.state }}</td></tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row footerfix">
        <div class="col-lg-12">
            {% for season in serie.seasons %}
                {% if season.number == seasonnumber %}
                    {% for episode in season.episodes %}
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h3 class="text-left normalize">Episode {{ episode.number }} - {{ episode.name }}</h3>
                        </div>
                        <div class="panel-body">
                            <div class="col-md-4">
                                <div class="text-center"><img src="{{ episode.image }}" class="cover" alt=""></div>
                            </div>
                            <div class="col-md-8">
                                <div><p>{{ episode.description }}</p></div>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                {% endif %}
            {% endfor %}


        </div>
    </div>


{% endblock %}