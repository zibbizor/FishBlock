{% extends 'base.html.twig' %}

{% block body %}

    <div class="wrapper">
        <div class="form-signin">
            <h3 class="form-signin-heading">Votre compte : {{ app.user.username }} </h3>
            <hr class="colorgraph"><br>

            <div class="panel-body">
                <div class="row">
                    <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="http://loremflickr.com/124/124"" class="img-circle img-responsive"> </div>

                    <div class="col-md-9 col-lg-9 ">
                        <table class="table table-user-information">
                            <tbody>
                            <tr>
                                <td>Votre Nom:</td>
                                <td>{{ app.user.username }}</td>
                            </tr>
                            <tr>
                                <td>Votre E-mail</td>
                                <td>{{ app.user.email }}</td>
                            </tr>
                            </tbody>
                        </table>

                        <div class="centered">
                            <a href="" class="btn btn-primary btn-center">Modifier vos informations</a>
                            <a href="{{ path('fos_user_change_password') }}" class="btn btn-primary">Modifer password</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}