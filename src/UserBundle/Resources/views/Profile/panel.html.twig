{% extends 'base.html.twig' %}

{% block body %}

    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Votre compte : {{ app.user.username }} </h3>
        </div>

        <div class="panel-body">
            <div class="row">
                <div class="col-md-3 col-lg-3 " align="center"> <img alt="User Pic" src="http://loremflickr.com/124/124"" class="img-circle img-responsive"> </div>

                <div class=" col-md-9 col-lg-9 ">
                    <table class="table table-user-information">
                        <tbody>
                        <tr>
                            <td>Nom:</td>
                            <td>{{ app.user.username }}</td>
                        </tr>
                        <tr>
                            <td>E-mail</td>
                            <td>{{ app.user.email }}</td>
                        </tr>


                        </tbody>
                    </table>

                    <a href="#" class="btn btn-primary">Modifier vos informations</a>
                    <a href="#" class="btn btn-primary">Modifer password</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}